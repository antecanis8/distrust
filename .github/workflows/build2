name: build

on:
  push:
    branches:
      - 'master'
    tags:
      - 'v*'
  workflow_dispatch:
    inputs:
      version:
        description: '版本号（可选）'
        required: false
        default: 'manual'

permissions:
  contents: read

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v3
        with:
          fetch-depth: 0
      
      - name: Set up Go
        uses: actions/setup-go@v4
        with:
          go-version: '1.24'
      
      - name: Run GoReleaser (snapshot mode)
        uses: goreleaser/goreleaser-action@v5
        with:
          distribution: goreleaser
          version: latest
          args: build --snapshot --clean
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
      
      - name: Upload build artifacts
        uses: actions/upload-artifact@v3
        with:
          name: distrust-builds
          path: dist/
          retention-days: 30  # 保留 30 天，可根据需要调整
      
      - name: Upload Linux amd64 binary
        uses: actions/upload-artifact@v3
        with:
          name: distrust-linux-amd64
          path: dist/distrust_linux_amd64_v1/
          retention-days: 30
